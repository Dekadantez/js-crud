{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main class="main">

  <form method="POST" action="/purchase-info?id={{id}}" class="form-card">

    {{> heading title="Мої замовлення"}}

    {{>divider}}


    <div class="list__block">
      {{#with data.purchases}}
      {{#each list}}
      <a href="/purchase-info?id={{id}}">
        <div class="block">
          <div class="list__card">
            <div>ID: {{id}}</div>
          </div>
          <div class="list__card">
            <div class="list__title">Товари</div>
            <div class="list__text">{{product}}</div>
          </div>
          <div class="list__card">
            <div class="list__title">Сума замовлення</div>
            <div class="list__text">{{totalPrice}} UAH</div>
          </div>
          <div class="list__card">
            <div class="list__title">Нараховані бонуси</div>
            <div class="list__text">{{bonus}} UAH</div>
          </div>
        </div>
      </a>
      {{/each}}
      {{>divider}}
      {{/with}}


    </div>

  </form>

</main>



