<div class="product__section">
  <div class="product">
    <h1 class="product__title">Список товарів</h1>
    <form method="POST" action="/product-list">
      <div class="product__content">
        <div class="block_card">
          {{#each card}}
          <div class="card">
            <div class="card__title">{{name}}</div>
            <div class="card__text">{{description}}</div>

            <div class="card__id">ID: {{id}} </div>
            <div class="card__sect">
              <div class="card__price"> {{price}} $</div>
              <a href="/product-edit?id={{id}}" class="card__link">Редагувати</a>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </form>
  </div>
</div>




